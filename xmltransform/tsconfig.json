{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "../lib",
		"listEmittedFiles": true,
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"allowJs": true
	},
	"exclude": [
		"node_modules"
	],
	"buildOptions": {
		"incremental": true,
		"force": true
	}
}
